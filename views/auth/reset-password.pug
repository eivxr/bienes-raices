extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores  
                    p.bg-red-500.text-white.uppercase.text-xs.text-center.p-2.mv-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md 
            div.bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block-text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Nuevo password
                        input#password.w-full.px-3.py-2.border.border-gray-300.placeholder-gray-400(placeholder="Escriba su nuevo password" type="text" name="password") 
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/registro") ¿No tienes una cuenta?, Regístrate
                        a.text-gray-500.text-xs(href="/auth/login") Si ya tienes cuenta, Inicia sesión.       
                    input( class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Confirmar")