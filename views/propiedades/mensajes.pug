extends ../layout/admin

block contenido 
     h2(class="text-2xl font-extrabold text-center margin-y-10")= pagina

     a(href="/mis-propiedades" class=" rounded py-2 px-10 bg-indigo-600 hover:bg-indigo-700 text-sm text-white text-center uppercase my-5 inline-block w-full sm:w-auto font-bold") Volver

     div(class="mx-auto max-w-4xl bg-white shadow-lg")

                                                       
         if mensajes.length      
             each mensaje in mensajes 
                 li(class="border-gray-300 border-b p-5 list-none ")
                     p(class="font-bold text-gray-800") Nombre: 
                         span(class="font-normal")= mensaje.usuario.nombre
                     p(class="font-bold text-gray-800") Correo: 
                         span(class="font-normal")= mensaje.usuario.email
                     p(class="font-bold text-gray-800") Mensaje: 
                         span(class="font-normal")= mensaje.mensaje
                     p(class="font-bold text-gray-800") Fecha 
                         span(class="font-normal")= formatearFecha(mensaje.createdAt)
         else 
             p(class="text-center text-gray-600 p-5") No hay mensajes